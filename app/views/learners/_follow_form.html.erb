<div id="follow_form_<%= learner.id %>">
  <% unless current_user.following?(learner) %>
    <%= form_with(model: current_user.active_relationships.build(followed_id: learner.id)) do |f| %>
      <%= f.hidden_field :followed_id %>
      <%= f.submit "フォロー" %>
    <% end %>
  <% else %>
    <%= form_with(model: current_user.active_relationships.find_by(followed_id: learner.id), method: :delete ) do |f| %>
      <%= f.submit "つながりを解除" %>
    <% end %>
  <% end %>
</div>
