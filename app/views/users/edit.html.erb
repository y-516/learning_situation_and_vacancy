<div class="user_edit_error_msg">
  <% @user.errors.full_messages.each do |msg| %>
  <ul>
    <li><%= msg %></li>
  </ul>
  <% end %>
</div>
<div class="user_edit_out">
  <h1>プロフィール編集画面</h1>
  <%=form_with(model:@user,local:true) do |f|%>
  <%=f.label:名前%>
  <div class="input"><%=f.text_field:name%></div>
  <%=f.label:メールアドレス%>
  <div class="input"><%=f.text_field:email%></div>
  <%=f.label:学習内容%>
  <div class="input"><%=f.text_area:curriculum%></div>
  <%=f.label:学習目標%>
  <div class="input"><%=f.text_area:learning_goal%></div>
  <%=f.label:得意分野%>
  <div class="input"><%=f.text_area:ability%></div>
  <%=f.label:配属プロジェクト%>
  <div class="input"><%=f.text_field:project%></div>
  <%=f.label:役職%>
  <div class="input"><%=f.select:position,[['一般',0],['リーダー',1]]%></div>
  <%=f.label:画像%>
  <div class="input"><%=f.file_field:image%></div>
  <div class="input"><%=f.submit:プロフィールを更新%></div>
  <%end%>
</div>
