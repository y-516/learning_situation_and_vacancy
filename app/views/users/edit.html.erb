<div class="user_edit_error_msg">
  <% @user.errors.full_messages.each do |msg| %>
  <ul>
    <li><%= msg %></li>
  </ul>
  <% end %>
</div>
<div class="user_edit_out">
  <h1>プロフィール編集画面</h1>
  <%=form_with(model:@user,local:true) do |f|%>
  <%if @current_user.position == 0%>
  <%=f.label:名前%>
  <div class="input"><%=f.text_field:name%></div>
  <%=f.label:メールアドレス%>
  <div class="input"><%=f.text_field:email%></div>
  <%=f.label:学習内容%>
  <div class="input"><%=f.text_area:curriculum,:placeholder => "(例) Ruby入門1"%></div>
  <%=f.label:学習目標%>
  <div class="input"><%=f.text_area:learning_goal,:placeholder => "(例) Ruby入門2まで"%></div>
  <%=f.label:得意分野%>
  <div class="input"><%=f.text_area:ability,:placeholder => "(例) HTML css歴1ヶ月"%></div>
  <%=f.label:配属プロジェクト%>
  <div class="input"><%=f.text_field:project,:placeholder => "(例) テスター"%></div>
  <%=f.label:画像%>
  <div class="input" id ="img_name"><%=f.file_field:image%></div>
  <div class="input"><%=f.submit:プロフィールを更新%></div>
  <%elsif @current_user.id == @user.id%>
  <%=f.label:名前%>
  <div class="input"><%=f.text_field:name%></div>
  <%=f.label:メールアドレス%>
  <div class="input"><%=f.text_field:email%></div>
  <%=f.label:学習内容%>
  <div class="input"><%=f.text_area:curriculum,:placeholder => "(例) Ruby入門1"%></div>
  <%=f.label:学習目標%>
  <div class="input"><%=f.text_area:learning_goal,:placeholder => "(例) Ruby入門2まで"%></div>
  <%=f.label:得意分野%>
  <div class="input"><%=f.text_area:ability,:placeholder => "(例) HTML css歴1ヶ月"%></div>
  <%=f.label:配属プロジェクト%>
  <div class="input"><%=f.text_field:project,:placeholder => "(例) テスター"%></div>
  <%=f.label:画像%>
  <div class="input" id ="img_name"><%=f.file_field:image%></div>
  <%=f.label:役職%>
  <div class="input"><%=f.select:position,[['一般',0],['リーダー',1]]%></div>
  <div class="input"><%=f.submit:プロフィールを更新%></div>
  <%else%>
  <h3><%=@user.name%>の役職を変更します</h3>
  <%=f.label:役職%>
  <div class="input"><%=f.select:position,[['一般',0],['リーダー',1]]%></div>
  <div class="input"><%=f.submit:役職変更%></div>
  <%end%>
  <%end%>
</div>
