<div class ="login_background">
  <div class ="sign_form">
    <h2>新規ユーザー登録画面</h2>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <% if @user.errors.any? %>
    <div id="error_explanation" class="alert alert-danger">
      <ul>
        <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
      </ul>
    </div>
    <% end %>

    <div class="field">
      <%= f.label :name%><br />
      <div class="input">
        <%= f.text_field :name, autofocus: true, autocomplete: "name",:placeholder => "(例) ダイブ 太郎"%>
      </div>
    </div>

    <div class="field">
      <%= f.label :email %><br />
      <div class="input">
        <%= f.email_field :email, autofocus: true, autocomplete: "email",:placeholder => "(例) dic@dic.com"%>
      </div>
    </div>

    <div class="field">
      <%= f.label :password %>
      <% if @minimum_password_length %>
      <em>(文字数最小<%= @minimum_password_length %> 文字)</em>
      <% end %><br />
      <div class="input">
        <%= f.password_field :password, autocomplete: "new-password" %>
      </div>
    </div>

    <div class="field">
      <%= f.label :password_confirmation %><br />
      <div class="input">
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </div>
    </div>

    <div class="field">
      <%= f.label :image%><br />
      <div class="input" id ="img_name">
        <%= f.file_field :image, autofocus: true, autocomplete: "name"%>
      </div>
    </div>

    <div class="input">
      <%= f.submit "登録" %>
    </div>
    <% end %>
  </div>
</div>
